root = true

[*.cs]
# Require braces for control blocks
csharp_prefer_braces = true:warning

# Always new line for braces (Allman style)
csharp_new_line_before_open_brace = all
csharp_new_line_between_query_expression_clauses = true

# Formatting preferences
csharp_indent_case_contents = true
csharp_indent_switch_labels = true

# 'var' usage preferences
csharp_style_var_for_built_in_types = true:warning
csharp_style_var_when_type_is_apparent = true:warning
csharp_style_var_elsewhere = true:warning

# Keep us from collapsing multi-line constructs
csharp_preserve_single_line_statements = false
csharp_preserve_single_line_blocks = true

# Encourage conditional (ternary) expressions where appropriate
dotnet_style_prefer_conditional_expression_over_assignment = true:suggestion
dotnet_style_prefer_conditional_expression_over_return = true:suggestion
dotnet_diagnostic.IDE0045.severity = suggestion  # Use conditional expression for assignment
dotnet_diagnostic.IDE0046.severity = suggestion  # Use conditional expression for return
dotnet_diagnostic.IDE0054.severity = suggestion	 # No multi-statement one-liners

# String comparisons
dotnet_style_string_comparison = true:suggestion

# Null checks and patterns
dotnet_style_throw_expression = false
dotnet_style_coalesce_expression = true:suggestion

# Member ordering by kind
dotnet_diagnostic.SA1201.severity = warning
# Members ordered by access level
dotnet_diagnostic.SA1202.severity = warning
# Do not require a blank line after a closing brace
dotnet_diagnostic.SA1513.severity = none

# Treat specific analyzers as warnings
dotnet_diagnostic.IDE0011.severity = warning   # Add braces
dotnet_diagnostic.IDE0063.severity = warning   # 'using' statement style

# Optional: modifier order
csharp_preferred_modifier_order = public, private, protected, internal, static, extern, new, virtual, abstract, sealed, override, readonly, unsafe, volatile, async:suggestion

